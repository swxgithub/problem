<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48D1CC">

    <RelativeLayout
        android:layout_width="418dp"
        android:layout_height="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginLeft="312dp"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:onClick="btnQuery"/>

        <EditText
            android:id="@+id/inputWord"
            android:layout_width="270dp"
            android:layout_height="41dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:hint="please input words"
            android:inputType="textEmailAddress"
            android:maxLength="70"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHighlight="@color/bg_login"
            android:textColorHint="@color/input_login_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSelectHandle="@color/bg_login" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="34dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textSize="25dp"
            android:textColor="#0000FF"
            android:layout_marginLeft="90dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="82dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/presence_audio_busy" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="105dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="paraphrase"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/Interpret"
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:background="@color/white"
            android:text="你好" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="210dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Sentences"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

            <TextView
                android:id="@+id/sentances"
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:background="@color/white"
                android:text="hello world!" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="107dp"
        android:orientation="horizontal"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="homepage"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textSize="10dp"
            android:onClick="btnReview"/>

        <Button
            android:id="@+id/query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query"
            android:textSize="10dp"
            android:textColor="#48D1CC"/>

        <Button
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textSize="10dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>