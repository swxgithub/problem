<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48D1CC">

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/wordR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textSize="25dp"
            android:textColor="#0000FF"
            android:layout_marginLeft="80dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="82dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/presence_audio_busy" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="105dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="paraphrase"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/InterpretR"
            android:layout_width="295dp"
            android:layout_height="70dp"
            android:layout_marginLeft="0dp"
            android:background="@color/white"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="209dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Sentences"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sentancesR"
            android:layout_width="296dp"
            android:layout_height="180dp"
            android:background="@color/white"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="408dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/homepage"
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:text="homepage"
            android:textAllCaps="false"
            android:textSize="10dp" />

        <Button
            android:id="@+id/review"
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:onClick="btnReviewR"
            android:text="Review"
            android:textAllCaps="false"
            android:textColor="#48D1CC"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnQuery"
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:onClick="btnQueryR"
            android:text="Query"
            android:textAllCaps="false"
            android:textSize="10dp" />

        <Button
            android:id="@+id/setting"
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:text="Setting"
            android:textAllCaps="false"
            android:textSize="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="77dp"
        android:layout_height="38dp"
        android:layout_marginStart="184dp"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="365dp"
        android:onClick="btnReadD"
        android:text="Acquired"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="77dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="365dp"
        android:onClick="btnAdd"
        android:text="Unacquired"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>